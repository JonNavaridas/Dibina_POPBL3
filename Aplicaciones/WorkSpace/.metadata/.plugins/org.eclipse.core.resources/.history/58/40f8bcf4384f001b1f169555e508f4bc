package usuarios;

import java.util.ArrayList;
import java.util.List;

import elementos.Pedido;

public class User {

	String id;
	String name;
	Integer password;
	Permisos permisos;
	List<Pedido> listaPedidos;
	
	public User(String id, String name, int password, Permisos permisos) {
		this.id = id;
		this.name = name;
		this.password = password;
		this.permisos = permisos;
		this.listaPedidos = new ArrayList<>();
	}
	
	public String getName() {
		return name;
	}
	
	public String getID() {
		return id;
	}
	
	public Permisos getPermisos() {
		return permisos;
	}
	
	public int getContraseña() {
		return password;
	}
	
	public void setContraseña(int contraseña) {
		this.password = contraseña;
	}
	
	public void addPedido(Pedido p) {
		listaPedidos.add(p);
	}
	
	public void removePedido(Pedido p) {
		listaPedidos.remove(p);
	}
	
	public List<Pedido> getListaPedidos() {
		return this.listaPedidos;
	}

	@Override
	public String toString() {
		return name + " (" + id + ")";
	}

	public String createUserString() {
		String[] values = this.name.split(" ");
		String output = "";
		
		output += values[0] + ",";
		if (values.length > 1) {
			for (int i = 1; i < values.length; i++)  output += values[1] + " ";
			output += ",";
		}
		output += this.name + ",";
		output += this.name + ",";
		output += this.nombre.getText().substring(0, 1).toLowerCase() + this.apellido.getText().substring(0, 1).toUpperCase()
				 + this.apellido.getText().substring(1);
		
		
		return output;
	}
}